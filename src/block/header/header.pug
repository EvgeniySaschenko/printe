mixin b-header()
	+b.HEADER.header
		.container
			+e.row_1

				+e.col_1
					+b.logo_header
						+e.A.link(href="#")
							+e.IMG.img(src="img/logo.svg")

				+e.col_2
					+b.text-box_header-regime
